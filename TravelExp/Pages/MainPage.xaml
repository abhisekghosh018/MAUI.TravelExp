<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelExp.Pages.MainPage"
             Title="Home">
    <Grid RowDefinitions="200, Auto">
        <Image Source="logo.jpg" WidthRequest="3000"></Image>

        <Grid Grid.Row="1" ColumnDefinitions="Auto, * , Auto" Padding="10,0">
            <Label Grid.Column="0" Text="Recent Trips" FontSize="20"></Label>
            <Button Grid.Column="2"  VerticalOptions="Start" Text="Add" MinimumWidthRequest="20" MinimumHeightRequest="20"  FontSize="12"></Button>
        </Grid>
    </Grid>
</ContentPage>